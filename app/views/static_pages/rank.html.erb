<% provide(:title, "Rank") %>

<div class="card text-center">
  <div class="card-header">
    <%= yield(:title) %>
  </div>
  <div class="card-body">
    <h5 class="card-title">Rank by number of work events.</h5>

    <table class="table table-striped table-responsive-sm">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">User</th>
        <th scope="col">Work Events</th>
      </tr>
      </thead>
      <tbody>
    <% @users.each_with_index do |user, i| %>
        <tr>
          <th scope="row"><%= i+1 unless [0,1,2].include?(i) %> <%= image_tag return_trophy_path(i), alt: "Trophy", style: "width: 80px;" if [0,1,2].include?(i)%></th>
          <td><%= link_to user.full_name, profile_path(user) %></td>
          <td><%= user.user_events.count %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <div class="card-footer text-muted">
    Do you have a question or concern? Send us an email at thepassageshift@gmail.com
  </div>
</div>