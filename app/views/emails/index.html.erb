<% provide(:title, "Emails") %>

<div class="card text-center">
  <div class="card-header">
    <%= yield(:title) %>
  </div>
  <div class="card-body">
    <h5 class="card-title">Send Emails.</h5>
    <p class="card-text">You are an admin and that's why you can access this page.</p>

    <table class="table table-striped table-dark table-responsive-sm">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">User</th>
        <th scope="col">Role</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Action</th>
      </tr>
      </thead>
      <tbody>
    <% @users.each_with_index do |user, i| %>
        <tr>
          <th scope="row"><%= i+1 %></th>
          <td><%= link_to user.full_name, profile_path(user) %></td>
          <td><%= user.user_types.pluck(:type_name).join(" and ") %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td>
            <%= link_to "Revoke Admin", revoke_admin_user_types_path(user_id: user.id), class: "btn btn-danger" %>
          </td>
        </tr>
    <% end %>
      </tbody>
    </table>
  </div>

  <div class="card-footer text-muted">
    Do you have a question or concern? Send us an email at thepassageshift@gmail.com
  </div>
</div>